<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Smoothie - Admin</title>
    <link href="@Links.Content.Admin.Styles.bootstrap_min_css" rel="stylesheet" type="text/css" />
    <link href="@Links.Content.Admin.Styles.bootstrap_responsive_min_css" rel="stylesheet" type="text/css" />
    <link href="@Links.Content.Admin.Styles.admin_css" rel="stylesheet" type="text/css" />
    @RenderSection("meta", false)
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar">
                    </span>
                </button>
                @Html.ActionLink("Smoothie", MVC.Admin.Home.Index(), new { @class = "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li class="active">@Html.ActionLink("Overview", MVC.Admin.Home.Index())</li>
                        <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Food
                                                 <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("All", MVC.Admin.Food.Index())</li>
                                <li>@Html.ActionLink("Pending", MVC.Admin.Food.Index().AddRouteValue("status", "Pending"))</li>
                                <li>@Html.ActionLink("Approved", MVC.Admin.Food.Index().AddRouteValue("status", "Approved"))</li>
                                <li>@Html.ActionLink("Deleted", MVC.Admin.Food.Index().AddRouteValue("status", "Deleted"))</li>
                       
                            </ul>
                        </li>
                        
                          <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Category
                                                 <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("List All", MVC.Admin.Category.Index())</li>
                                <li>@Html.ActionLink("Add", MVC.Admin.Category.Add())</li>
                                <li class="divider"></li>
                 
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"
        type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.8/jquery.validate.min.js"
        type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.min.js"
        type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.unobtrusive-ajax.min.js"
        type="text/javascript"></script>
    @RenderSection("js", false)
    <script type="text/javascript" src="@Links.Content.Admin.Javascripts.bootstrap_min_js"></script>
</body>
</html>
